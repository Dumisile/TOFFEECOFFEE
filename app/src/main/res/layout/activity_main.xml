<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEB887"
    tools:context="com.example.dumisile.toffeecoffee.MainActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TOFFEE COFFEE SHOP"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="#A52A2A"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="IT'S COFFEE O'CLOCK...!!!"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/coffee"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <CheckBox
        android:id="@+id/chkBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Black Coffee"
        android:textColor="#D2691E"
        android:layout_alignBaseline="@+id/editTextBlack"
        android:layout_alignBottom="@+id/editTextBlack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/chkWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="White Coffee"
        android:textColor="#D2691E"
        android:layout_above="@+id/editTextCappucino"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/chkCappucino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cappucino"
        android:textColor="#D2691E"
        android:layout_above="@+id/editTextHot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/chkHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot Chocolate"
        android:textColor="#D2691E"
        android:layout_above="@+id/btnOrder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />



    <Button
        android:id="@+id/btnOrder"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:text="ORDER"
        android:textColor="#D2691E"
        android:background="#FFE4C4"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editTextHot"
        android:layout_alignEnd="@+id/editTextHot"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="visible"
        android:layout_alignBaseline="@+id/btnOrder"
        android:layout_alignBottom="@+id/btnOrder"
        android:layout_toRightOf="@+id/chkHot"
        android:layout_toEndOf="@+id/chkHot" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COFFEE MENU:"
        android:textColor="#A52A2A"
        android:textStyle="bold"
        android:layout_above="@+id/editTextBlack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUANTITY:"
        android:textColor="#A52A2A"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/chkHot"
        android:layout_toEndOf="@+id/chkHot" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOPPINGS"
        android:textColor="#A52A2A"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <EditText
        android:id="@+id/editTextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chkWhite"
        android:ems="10"
        android:inputType="number"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <EditText
        android:id="@+id/editTextWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_alignBottom="@+id/chkWhite"
        android:layout_alignLeft="@+id/editTextBlack"
        android:layout_alignStart="@+id/editTextBlack"
        android:layout_alignRight="@+id/editTextBlack"
        android:layout_alignEnd="@+id/editTextBlack" />

    <EditText
        android:id="@+id/editTextCappucino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_above="@+id/editTextHot"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignRight="@+id/editTextWhite"
        android:layout_alignEnd="@+id/editTextWhite" />

    <EditText
        android:id="@+id/editTextHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_alignBottom="@+id/chkHot"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignRight="@+id/editTextCappucino"
        android:layout_alignEnd="@+id/editTextCappucino" />

    <EditText
        android:id="@+id/topping1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_alignBaseline="@+id/editTextBlack"
        android:layout_alignBottom="@+id/editTextBlack"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <EditText
        android:id="@+id/topping2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_alignLeft="@+id/topping1"
        android:layout_alignStart="@+id/topping1"
        android:layout_alignBottom="@+id/editTextWhite"
        android:layout_alignRight="@+id/topping1"
        android:layout_alignEnd="@+id/topping1" />

    <EditText
        android:id="@+id/topping3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextHot"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_alignLeft="@+id/topping2"
        android:layout_alignStart="@+id/topping2"
        android:layout_alignRight="@+id/topping2"
        android:layout_alignEnd="@+id/topping2" />

    <EditText
        android:id="@+id/topping4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextHot"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_alignLeft="@+id/topping3"
        android:layout_alignStart="@+id/topping3"
        android:layout_alignRight="@+id/topping3"
        android:layout_alignEnd="@+id/topping3" />


</RelativeLayout>
