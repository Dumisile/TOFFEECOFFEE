<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEB887"
    tools:context="com.example.dumisile.toffeecoffee.DisplayMenu">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="#A52A2A"
        android:text="TOFFEE COFFEE SHOP"
        android:fontFamily="cursive"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/coffee"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORDER DISPLAY:"
        android:textColor="#A52A2A"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnConfirm"
        android:layout_alignStart="@+id/btnConfirm" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="YOU ORDERED:"
        android:textColor="#A52A2A"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".."
        android:textColor="#D2691E"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMOUNT DUE:"
        android:textColor="#A52A2A"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_above="@+id/btnConfirm"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginBottom="34dp" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="CONFIRM ORDER"
        android:onClick="confirm"
        android:textColor="#D2691E"
        android:background="#FFE4C4"
        android:layout_above="@+id/btnChange"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnChange"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#FFE4C4"
        android:text="CHANGE ORDER"
        android:textColor="#D2691E"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp" />

    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".."
        android:textColor="#D2691E"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignLeft="@+id/txtDisplay"
        android:layout_alignStart="@+id/txtDisplay" />

</RelativeLayout>
